@model IEnumerable<Buoi2.Models.Course>

<div class="row">
    <ul class="course">
        @foreach (var course in Model)
        {
            if (course.IsCanceled == false)
            {
            <li>
                <div class="date">
                    <div class="month">
                        @course.DateTime.ToString("MM")
                    </div>
                    <div class="day">
                        @course.DateTime.ToString("dd")
                    </div>
                </div>
                <div class="details">
                    <span class="lecturer">
                        @*@course.Lecturer.Name*@
                    </span>
                    <p></p>
                    <span class="category">
                        @course.Category.Name
                    </span>
                </div>
                <p></p>
                <div class="action">
                    <a href="@Url.Action("Edit", "Course", new { id = course.Id })">Edit</a> |
                    <a href="#"  class="js-cancel-course" data-course-id="@course.Id">Cancel</a>
                </div>
            </li>
            }
        }

    </ul>
</div>

@section scripts{
    <script>$(document).ready(function () {
            $('.js-cancel-course').click(function (e) {
                e.preventDefault();
                var link = $(e.target);
                bootbox.confirm("Are you sure to cancel?", function () {
                    $.ajax({
                        url: "/api/course/" + link.attr("data-course-id"),
                        method: "DELETE"
                    }).done(function () {
                        link.parents("li").fadeOut(function () {
                            $(this).remove();
                        });
                    }).fail(function () {
                        alert("Something failed");
                    });
                });
            });
        })</script>
}

